<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MahindraKiosk" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:fontFamily">@font/poppins_medium</item>
    </style>

    <style name="WhiteOutLineTextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/white</item>
    </style>
    <style name="CircularDeterminateProgressBar">
        <item name="android:indeterminateOnly">false</item>
        <item name="android:progressDrawable">@drawable/progress_drawable</item>
    </style>

    <style name="ButtonStyle" parent="@style/Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textColor">@color/button_text_unselected</item>
        <item name="android:backgroundTint">@color/button_unselected</item>
        <item name="android:strokeColor">@color/light_grey</item>
    </style>

    <style name="RadioButtonStyle" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="android:background">@drawable/radio_btn_selector</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="CustomHintTextAppearance" parent="TextAppearance.Design.Hint">
        <item name="android:textSize">@dimen/medium_text</item>
        <item name="android:textColor">@color/grey</item>
        <item name="android:textColorHint">@color/grey</item>
    </style>
</resources>