<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="30dp"
    android:layout_margin="10dp"
    app:cardBackgroundColor="#e5fcf0"
    android:layout_height="wrap_content">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >
        <TextView
            android:id="@+id/tv_vehicle_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MH2973827382"
            android:textColor="@color/blue"
            android:layout_marginTop="15dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:includeFontPadding="false"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"
            android:textSize="@dimen/medium_text"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/tv_vehicle_name"
            />
        <TextView
            android:id="@+id/tv_vehicle_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="5dp"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"
            android:gravity="center"
            android:paddingBottom="10dp"
            android:textSize="@dimen/small_text"
            android:includeFontPadding="false"
            android:text="JKHSADJ"
            app:layout_constraintHorizontal_weight="0.7"
            android:textColor="@color/blue"
            app:layout_constraintTop_toBottomOf="@+id/tv_vehicle_no"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/img_chennal"
            app:layout_constraintBottom_toBottomOf="parent"
            />
        <ImageView
            android:id="@+id/img_chennal"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_marginEnd="10dp"
            android:adjustViewBounds="true"
            android:visibility="invisible"
            app:layout_constraintHorizontal_weight="0.3"
            android:scaleType="centerInside"
            android:src="@drawable/ic_green_channel"
            app:layout_constraintStart_toEndOf="@+id/tv_vehicle_name"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tv_vehicle_name"
            app:layout_constraintBottom_toBottomOf="@+id/tv_vehicle_name"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>